@model NodeValue


@if (Model.NodeValueId == 0)
{
    <form method="post" asp-action="SearchNode" class="form">
        <div class="form-group">
            <label>Id </label>
            <input asp-for="NodeValueId" class="form-control"/>
        </div>
        <button type="submit">Submit</button>
    </form>
    <a asp-action="Index" class="btn-primary fs-2" >Back to main page</a>
}
else
{
    <div class="form-group">
        <label>Id </label>
        <span class="form-control">@Model.NodeValueId</span>
    </div>
    <div class="form-group">
        <label>Value </label>
        <span class="form-control">@Model.Value</span>
    </div>
    <a asp-action="Index" class="btn-primary fs-2" >Back to main page</a>
}

